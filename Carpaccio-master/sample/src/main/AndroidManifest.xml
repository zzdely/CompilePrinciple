<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.florent37.carpaccio.sample" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivitySample"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ActivityImageView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MainActivityParallax"
            android:label="@string/app_name" />
        <activity
            android:name=".MainActivityRecycler"
            android:label="@string/app_name" />
        <activity
            android:name=".MainActivityRecyclerRetrofit"
            android:label="@string/app_name" />
    </application>

</manifest>
